@model CorpBite.ViewModels.OrderViewModels.OrderViewModel

@{
    ViewData["Title"] = "Order Receipt";
}

<div class="container mt-5">
    <h2>Order Receipt</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.OrderId</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToString("g")</dd>

        <dt class="col-sm-2">Order Status</dt>
        <dd class="col-sm-10">@Model.OrderStatus</dd>

        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.TotalAmount</dd>

        <dt class="col-sm-2">Payment Method</dt>
        <dd class="col-sm-10">@Model.PaymentMethod</dd>

        @if (Model.ScheduledTime.HasValue)
        {
            <dt class="col-sm-2">Scheduled Time</dt>
            <dd class="col-sm-10">@Model.ScheduledTime?.ToString("g")</dd>
        }

        <dt class="col-sm-2">Order Items</dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td>@item.MenuItemName</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price</td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
    <a asp-action="OrderHistory" class="btn btn-secondary">Back to Order History</a>
</div>