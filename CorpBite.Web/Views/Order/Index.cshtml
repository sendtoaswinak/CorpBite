@model List<CorpBite.Models.Order>

@{
	ViewData["Title"] = "Order History";
}

<div class="container mt-5">
	<h2>@ViewData["Title"]</h2>
	<hr />
	@if (Model != null && Model.Any())
	{
		<table class="table">
			<thead>
				<tr>
					<th>Order ID</th>
					<th>Order Date</th>
					<th>Status</th>
					<th>Total Amount</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var order in Model)
				{
					<tr>
						<td>@order.Id</td>
						<td>@order.OrderDate.ToString("dd-MMM-yyyy hh:mm tt")</td>
						<td>@order.OrderStatus</td>
						<td>@order.TotalAmount.ToString("C")</td>
						<td>
							<a asp-action="Receipt" asp-route-orderId="@order.Id" class="btn btn-sm btn-info">View Details</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>No order history available.</p>
	}
</div>