@{
	ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
	<div class="jumbotron bg-light p-5 rounded-lg">
		<h1 class="display-4">Welcome to CorpBite!</h1>
		<p class="lead">Your go-to platform for corporate food ordering.</p>
		<hr class="my-4">
		<p>Browse delicious meals from your favorite food courts within your office building.</p>
		@if (!User.Identity.IsAuthenticated)
		{
			<p class="lead">
				<a class="btn btn-primary btn-lg" asp-controller="Auth" asp-action="Register" role="button">Register Now</a> or
				<a class="btn btn-success btn-lg" asp-controller="Auth" asp-action="Login" role="button">Log In</a>
			</p>
		}
		else
		{
			<p class="lead">
				<a class="btn btn-primary btn-lg" asp-controller="Order" asp-action="Create" role="button">Start Ordering</a>
			</p>
		}
	</div>

	@if (User.Identity.IsAuthenticated)
	{
		<div class="row mt-4">
			<div class="col-md-4">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">Browse Food Courts</h5>
						<p class="card-text">View available food options based on your location.</p>
						<a asp-controller="Order" asp-action="Create" class="btn btn-outline-primary">Browse Now</a>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">My Cart</h5>
						<p class="card-text">Review and manage the items in your shopping cart.</p>
						<a asp-controller="Order" asp-action="Cart" class="btn btn-outline-success">View Cart</a>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">Submit Feedback</h5>
						<p class="card-text">Share your experience and help us improve.</p>
						<a asp-controller="Feedback" asp-action="Submit" class="btn btn-outline-warning">Give Feedback</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>