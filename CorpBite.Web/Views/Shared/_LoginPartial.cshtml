@model dynamic
@using System.Security.Claims
@if (User.Identity.IsAuthenticated)
{
    <form class="d-flex" asp-controller="Auth" asp-action="Logout" method="post">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="User" asp-action="Profile" title="Manage"><i class="fa-solid fa-user me-2"></i> Hello @User.FindFirstValue(ClaimTypes.Name)!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="nav-link btn btn-link text-dark"><i class="fa-solid fa-sign-out-alt me-2"></i> Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link btn btn-outline-success me-2" asp-controller="Auth" asp-action="Login"><i class="fa-solid fa-right-to-bracket me-2"></i> Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-primary" asp-controller="Auth" asp-action="Register"><i class="fa-solid fa-user-plus me-2"></i> Register</a>
        </li>
    </ul>
}