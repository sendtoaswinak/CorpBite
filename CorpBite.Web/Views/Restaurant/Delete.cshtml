@model CorpBite.Models.Restaurant

@{
	ViewData["Title"] = "Delete Restaurant";
}

<div class="container mt-5">
	<h2>@ViewData["Title"]</h2>
	<h3>Are you sure you want to delete this restaurant?</h3>
	<div>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				Name
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Name)
			</dd>
			<dt class="col-sm-2">
				Location
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Location.BuildingName) - Floor @Html.DisplayFor(model => model.Location.FloorNumber)
			</dd>
		</dl>

		<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
			<input type="hidden" asp-for="Id" />
			<input type="submit" value="Delete" class="btn btn-danger" /> |
			<a asp-action="Index" class="btn btn-secondary">Back to List</a>
		</form>
	</div>
</div>