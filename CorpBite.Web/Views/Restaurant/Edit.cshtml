@model CorpBite.ViewModels.RestaurantViewModels.RestaurantViewModel

@{
	ViewData["Title"] = "Edit Restaurant";
}

<div class="container mt-5">
	<h2>@ViewData["Title"]</h2>
	<hr />
	<div class="row">
		<div class="col-md-4">
			<form asp-controller="Restaurant" asp-action="Edit" asp-route-id="@Model.Id" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="Id" />
				<div class="mb-3">
					<label asp-for="Name" class="form-label"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Description" class="form-label"></label>
					<textarea asp-for="Description" class="form-control"></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="LocationId" class="form-label"></label>
					<select asp-for="LocationId" class="form-select" asp-items="ViewBag.Locations">
						<option value="">-- Select Location --</option>
					</select>
					<span asp-validation-for="LocationId" class="text-danger"></span>
				</div>
				<button type="submit" class="btn btn-primary">Save</button> |
				<a asp-action="Index" class="btn btn-secondary">Back to List</a>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}